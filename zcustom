# .zcustom

EDITOR='vi'
VISUAL='vi'
HISTSIZE=50000

export LESS='-R'
if which -s src-hilite-lesspipe.sh > /dev/null; then
    export LESSOPEN='| '$(which src-hilite-lesspipe.sh)' %s'
fi

export GOPATH=$HOME
PATH=$HOME/local/bin:$GOPATH/bin:$PATH
PATH=$HOME/src/github.com/artifactsauce/proglets/bin:$PATH

ARCH=$(uname)
while read
do
    [[ "$REPLY" =~ ^\# ]] && continue
    [ -f "$HOME/.zshrc.d/$REPLY" ] && source $HOME/.zshrc.d/$REPLY
done <<EOS
functions
peco
localenv
arch/${ARCH}
hidden/environments
EOS

[ -f "$HOME/.travis/travis.sh" ] && . $HOME/.travis/travis.sh

if which -s hub     > /dev/null; then eval "$(hub alias -s)"; fi
if which -s direnv  > /dev/null; then eval "$(direnv hook zsh)"; fi
if which -s bundle  > /dev/null; then alias be="bundle exec"; fi
if which -s vagrant > /dev/null; then alias vsnap="vagrant snapshot take \$(date +%Y%m%d%H%M%S)"; fi
