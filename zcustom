# .zcustom

EDITOR='vi'
VISUAL='vi'
HISTSIZE=50000

unalias run-help
autoload run-help
export HELPDIR=/usr/local/share/zsh/help

export LESS='-R'
if which -s src-hilite-lesspipe.sh > /dev/null; then
    export LESSOPEN='| '$(which src-hilite-lesspipe.sh)' %s'
fi

export JAVA_HOME=$(/usr/libexec/java_home -v 1.8)
export STUDIO_JDK="$JAVA_HOME"

export GOPATH=$HOME
PATH=$HOME/Dropbox/cmd/bin:$HOME/local/bin:$GOPATH/bin:$PATH
eval "$($HOME/src/github.com/artifactsauce/proglets/bin/proglets init -)"
eval "$($HOME/src/gitlab.com/artifactsauce/swine/bin/swine init -)"

ARCH=$(uname)
while read
do
    [[ "$REPLY" =~ ^\# ]] && continue
    [ -f "$HOME/.zshrc.d/$REPLY" ] && source $HOME/.zshrc.d/$REPLY
done <<EOS
functions
peco
interpreter
arch/${ARCH}
hidden/environments
EOS

[ -f "$HOME/.travis/travis.sh" ] && . $HOME/.travis/travis.sh

if which -s hub     > /dev/null; then eval "$(hub alias -s)"; fi
if which -s direnv  > /dev/null; then eval "$(direnv hook zsh)"; fi
if which -s bundle  > /dev/null; then alias be="bundle exec"; fi
